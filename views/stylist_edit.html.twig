<html>
    <head>
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
        <title></title>
    </head>
    <body>
        <div class = "container">
            <h1>Edit Stylist Page for {{ stylist.getStylistName }}</h1>

            <form action="/stylists/{{ stylist.getId }}" method="post">
                <input type="hidden" name="_method" value="patch">
                <label for="stylist_name">Stylist Name:</label>
                <input type="text" name="stylist_name" id="stylist_name">
                <button type="submit">Update</button>
            </form>

            <form action="/stylists/{{ stylist.getId }}" method="post">
                <input name="_method" type="hidden" value="delete">
                <button type="submit">Delete this stylist</button>
            </form>
        </div>
    </body>
</html>
